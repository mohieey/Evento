@using Microsoft.AspNet.Identity;

<div class="container">


    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand font-weight-bold" href="#">Evento</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav w-100">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Add Admin", "AddAdmin", "Account", null, new { @class = "nav-link text-warning" })</li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Dashboard", "Clients", "Admin", null, new { @class = "nav-link text-danger" })</li>
                }
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Events
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        @Html.ActionLink("Show Events", "Index", "Event", null, new { @class = "dropdown-item" })
                        @if (User.IsInRole("Host"))
                        {
                            @Html.ActionLink("Create Event", "CreateEvent", "Event", null, new { @class = "dropdown-item" })

                        }
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Dropdown link
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </li>

                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ml-auto">
                        @Html.ActionLink("Become a host", "Register", "Account", new { isHost = true }, new { @class = "nav-link" })
                    </li>
                }

                @if (User.IsInRole("User"))
                {
                    <a href=@Url.Action("Index", "ShoppingCart") type="button" class="btn btn-secondary">
                        My Cart <span class="badge badge-light">
                            @{
                                BL.AppServices.ShoppingCartAppService shoppingcartservice = new BL.AppServices.ShoppingCartAppService();
                                var counter = shoppingcartservice.GetShoppingCartTicketsByUserId(User.Identity.GetUserId()).Count();
                            }
                            @counter
                        </span>
                    </a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ml-auto">
                        @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "nav-link" })
                    </li>
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ml-auto">
                        @Html.ActionLink("Register", "Register", "Account", null, new { @class = "nav-link" })
                    </li>

                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item align-self-end">
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                    </li>
                }
            </ul>
            @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </div>
    </nav>




</div>


