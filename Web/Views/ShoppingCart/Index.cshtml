@model List<DAL.ShoppingCartTicket>
@{
    ViewBag.Title = "Index";
}

<h2>My Cart</h2>
<div class="container">
    @{int totalPrice = 0; }
    @{ foreach (var sct in Model)
        {

            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @sct.ticket.Event.Name for <strong>@sct.ticket.Event.price</strong>
            </div>

            totalPrice += @sct.ticket.Event.price;
        }
    }
    <p class="display-4" style="font-size:35px;">Total = @totalPrice </p>
    @Html.ActionLink("Check Out", "Create", "Order", new { totalPrice = totalPrice }, new { @class = "btn btn-secondary " })

</div>

