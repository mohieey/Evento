@model List<DAL.ShoppingCartTicket>
@{
    ViewBag.Title = "Index";
}

<h2>My Cart</h2>
<div class="container">
    @{ foreach (var sct in Model)
        {

            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                @sct.ticket.Event.Name for <strong>@sct.ticket.price</strong>
            </div>

        }
    }

    @*<p class="display-4" style="font-size:35px;">Total = @Model.totalPrice </p>*@
    @Html.ActionLink("Check Out", "CheckOut", "ShoppingCart", Model, new { @class = "btn btn-secondary " })

</div>

